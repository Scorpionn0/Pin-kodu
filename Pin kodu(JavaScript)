
function insert(num)
    {
        document.getElementById("pinv").value=document.getElementById("pinv").value+num;
    }
function back()
{
      var exp = document.getElementById("pinv").value;
      document.getElementById("pinv").value=exp.substring(0,exp.length-1);
}

